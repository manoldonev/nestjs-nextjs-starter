{
  "name": "nestjs-nextjs-starter",
  "version": "0.1.0",
  "private": true,
  "description": "Full-stack starter template with NestJS API and Next.js frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nestjs-nextjs-starter.git"
  },
  "keywords": [
    "nestjs",
    "nextjs",
    "fullstack",
    "template",
    "starter",
    "typescript",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -A -p -i run dev",
    "dev:api": "yarn workspace @starter/api dev",
    "dev:web": "yarn workspace @starter/web dev",
    "build": "yarn workspaces foreach -A -t run build",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspaces foreach -A run lint",
    "type-check": "yarn workspaces foreach -A run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules",
    "docker:up": "./scripts/docker.sh up",
    "docker:down": "./scripts/docker.sh down",
    "docker:restart": "./scripts/docker.sh restart",
    "docker:logs": "./scripts/docker.sh logs",
    "docker:ps": "./scripts/docker.sh ps",
    "docker:clean": "./scripts/docker.sh clean",
    "docker:redis-cli": "./scripts/docker.sh redis-cli"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.50.1"
  }
}
